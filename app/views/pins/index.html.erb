
<%= render 'pages/home' unless user_signed_in? %>

<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class=" box panel panel-default">
      <div class="panel-body">
        <%= link_to image_tag(pin.image.url(:medium)), pin_path(pin)%>
      </div>

      <div class="panel-footer">
          <%= pin.description %>
          <%= pin.user.email if pin.user %>
          
          <% if pin.user == current_user %>
            <%= link_to  edit_pin_path(pin), class: 'btn btn-warning'  do %>
                <span class="glyphicon glyphicon-edit"></span>edit
            <% end %>

            <%= link_to  pin, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
              <span class="glyphicon glyphicon-trash"></span>delete
            <% end %>

          <% end %>
      </div>
    </div>
  <% end %>
</div>
      
